{
  "compilerOptions": {
    "allowJs": true,
    "strict": false,
    "target": "esnext",
    "lib": ["deno.window"],
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any", "no-unused-vars", "ban-types"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}